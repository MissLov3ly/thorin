{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "declaration": true,
    "jsx": "react",
    "outDir": "./dist/types",
    "paths": {
      "!/*": ["../*"],
      "@/*": ["./*"]
    },
    "types": [
      "@testing-library/jest-dom",
      "jest",
      "vite/client",
      "vite-plugin-svgr/client"
    ],
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "tags": ["styled", "css", "mq"],
        "validate": true,
        "lint": {
          "validProperties": ["flex-gap"]
        }
      }
    ]
  },
  "include": ["src"]
}
